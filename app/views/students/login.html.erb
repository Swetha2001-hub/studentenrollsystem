<h1>Login</h1>

<% if flash.now[:alert] %>
  <div style="color: red;  padding: 5px; margin-bottom: 10px;">
    <%= flash.now[:alert] %>
  </div>
<% end %>

<%= form_with url: login_path, method: :post do %>
  <div>
    <%= label_tag :email, "Email" %>
    <%= text_field_tag :email, params[:email] %>
  </div>

  <div>
    <%= label_tag :password, "Password" %>
    <%= password_field_tag :password %>
  </div>

  <div>
    <%= submit_tag "Login" %>
  </div>
<% end %>


